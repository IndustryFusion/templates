{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://industry-fusion.org/base/v0.1/commonBodyCare",
    "title": "Common template for body care products",
    "description": "Properties for common body care type",
    "type": "object",
    "properties": {
         "eclass_template_id": {
            "type": "string",
            "title": "IFRIC Template ID",
            "description": "ID mapping for ECLASS",
            "default": "0173-1#01-AGE748#003",
            "readOnly": true,
            "segment": "identification",
            "model": true,
            "owner_ref": "application"
        },
        "asset_status": {
            "type": "string",
            "title": "Asset Status",
            "description": "State of the Asset in Scorpio",
            "readOnly": true,
            "segment": "identification",
            "model": false,
            "owner_ref": "application"
        },
        "creation_date": {
            "type": "date",
            "title": "Asset Creation Date",
            "description": "Date of the creation of asset",
            "segment": "model",
            "readOnly" : true,
            "model": false,
            "owner_ref": "application"
        },
        "asset_manufacturer_name": {
            "type": "string",
            "title": "Asset Manufacturer Name",
            "description": "The manufacturer of the asset",
            "segment": "model",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "logo_manufacturer": {
            "type": "object",
            "title": "Logo Manufacturer",
            "contentEncoding": "base64",
            "contentMediaType": "image/png",
            "description": "Logo of the manufacturer",
            "segment": "model",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "product_name": {
            "type": "string",
            "title": "Product Name",
            "description": "Model name/Name of the asset from the manufacturer",
            "segment": "model",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "asset_serial_number": {
            "type": "string",
            "title": "Serial Number",
            "description": "Serial number of machine/product",
            "segment": "identification",
            "model": false,
            "owner_ref": "manufacturer"
        },
        "product_image": {
            "type": "object",
            "title": "Product Icon",
            "contentEncoding": "base64",
            "contentMediaType": "image/png",
            "description": "The production icon of the asset",
            "segment": "model",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "manufacturing_year": {
            "type": "number",
            "title": "Year of manufacturing",
            "description": "The manufacturer year of the asset",
            "segment": "model",
            "model": false,
            "owner_ref": "manufacturer"
        },
        "description": {
            "type": "string",
            "title": "Description",
            "description": "Description of the asset",
            "segment": "model",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "pif_documentation": {
            "type": "object",
            "title": "Product Information File",
            "contentEncoding": "base64",
            "contentMediaType": "application/pdf",
            "description": "The legally required documentation for the machine (PID)",
            "segment": "documentation",
            "model": true,
            "owner_ref": "manufacturer",
            "enum": []
        },
        "additional_files": {
            "type": "object",
            "title": "Additional Files",
            "contentEncoding": "base64",
            "contentMediaType": "application/pdf",
            "description": "Additional Files related to asset",
            "segment": "resource",
            "model": true,
            "owner_ref": "manufacturer",
            "enum": []
        },
        "instruction_documents": {
            "type": "object",
            "title": "Instructions",
            "contentEncoding": "base64",
            "contentMediaType": "application/pdf",
            "description": "Additional instruction files related to asset",
            "segment": "instruction",
            "model": true,
            "owner_ref": "manufacturer",
            "enum": []
        },
        "usage_instructions": {
            "type": "string",
            "title": "Usage Instructions",
            "description": "Usage instructions of the product",
            "segment": "instruction",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "warning_message": {
            "type": "string",
            "title": "Warning Message",
            "description": "Warning message for the user",
            "segment": "instruction",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "best_before": {
            "type": "date",
            "title": "Best use before (POA)",
            "description": "Best use before of the asset",
            "segment": "instruction",
            "model": true,
            "owner_ref": "manufacturer"
         },
         "user_manual": {
            "type": "object",
            "title": "User Manuals",
            "contentEncoding": "base64",
            "contentMediaType": "application/pdf",
            "description": "User manual related to asset",
            "segment": "instruction",
            "model": true,
            "owner_ref": "manufacturer",
            "enum": []
        },
        "ce_marking": {
            "type": "object",
            "title": "CE-Marking",
            "description": "The ce-marking of the asset",
            "contentEncoding": "base64",
            "contentMediaType": "application/pdf",
            "segment": "resource",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "overall_weight": {
            "type": "number",
            "title": "Overall Weight",
            "description": "Overall Weight in kilograms",
            "unit": "kg",
            "segment": "packaging",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "net_weight": {
            "type": "number",
            "title": "Net Weight",
            "description": "Net Weight in kilograms",
            "unit": "kg",
            "segment": "packaging",
            "model": true,
            "owner_ref": "manufacturer"
        },
         "net_contents": {
            "type": "number",
            "title": "Net Content",
            "description": "Net Content",
            "segment": "packaging",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "stock_keeping_unit": {
            "type": "string",
            "title": "SKU",
            "description": "SKU (Stock Keeping Unit)",
            "segment": "identification",
            "model": true,
            "owner_ref": "manufacturer"
        },
         "badge_number": {
            "type": "number",
            "title": "Badge Number",
            "description": "Badge Number",
            "segment": "resource",
            "model": false,
            "owner_ref": "manufacturer"
        },
        "brand_owner": {
            "type": "string",
            "title": "Brand Owner",
            "description": "Brand Owner (Company)",
            "segment": "model",
            "model": false,
            "owner_ref": "manufacturer"
        },
        "production_date": {
            "type": "date",
            "title": "Production Date",
            "description": "Production Date",
            "segment": "model",
            "model": false,
            "owner_ref": "manufacturer"
        },
        "country_of_manufacturing": {
            "type": "string",
            "title": "Country of Manufacturing",
            "description": "Country of Manufacturing",
            "segment": "model",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "cpnp_registration_date": {
            "type": "date",
            "title": "CPNP Registration Date",
            "description": "Cosmetic product notification portal registration date",
            "segment": "model",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "ingredients": {
            "type": "array",
            "title": "INCI Ingredients",
            "description": "Ingredients (from INCI Database)",
            "segment": "content",
            "model": true,
            "owner_ref": "manufacturer",
            "enum": ["Aqua", "Glycerin", "Citrus Paradisi (Grapefruit) Peel Oil", "Anthemis Nobilis Flower Oil", "Sodium Cocoate", "Cannabis sativa Seed Oil", "Aloe Barbadensis Leaf Juice"]
        },
        "allergens": {
            "type": "array",
            "title": "Contained Allergens",
            "description": "Allergens (from Allergen Database)",
            "segment": "content",
            "model": true,
            "owner_ref": "manufacturer",
            "enum": ["a", "b"]
        },
        "certifications": {
            "type": "object",
            "title": "Certifications",
            "description": "Certifications for the product",
            "contentEncoding": "base64",
            "contentMediaType": "application/pdf",
            "segment": "resource",
            "model": true,
            "owner_ref": "manufacturer",
            "enum": []
        },
        "badges_seals": {
            "type": "array",
            "title": "Badges",
            "description": "Badges",
            "segment": "resource",
            "model": true,
            "owner_ref": "manufacturer"
            "enum": ["Vegan", "EU Bio", "Eco Cert", "Bioland"]
        },
        "links": {
            "type": "string",
            "title": "Links",
            "description": "Links",
            "segment": "resource",
            "model": true,
            "owner_ref": "manufacturer"
            "enum": []
        },
        "shvc_substances": {
            "type": "array",
            "title": "SHVC Substances",
            "description": "SHVC Substances",
            "segment": "content",
            "model": true,
            "owner_ref": "manufacturer"
            "enum": ["a", "b"]
        },
        "recycling_codes": {
            "type": "string",
            "title": "Recycling codes of packaging",
            "description": "Recycling codes of packaging",
            "segment": "packaging",
            "model": true,
            "owner_ref": "manufacturer"
            "enum": ["5 PP", "21 PAP", "70 GL"]
        },
        "width": {
            "type": "string",
            "title": "Width",
            "description": "Width",
            "segment": "packaging",
            "model": true,
            "unit": "MM"
            "owner_ref": "manufacturer"
        },
        "height": {
            "type": "string",
            "title": "Height",
            "description": "Height",
            "segment": "packaging",
            "model": true,
            "unit": "MM"
            "owner_ref": "manufacturer"
        },
        "depth": {
            "type": "string",
            "title": "Depth",
            "description": "Depth",
            "segment": "packaging",
            "model": true,
            "unit": "MM"
            "owner_ref": "manufacturer"
        }
    }
}
