{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://industry-fusion.org/base/v0.1/common",
    "title": "Common template",
    "description": "Properties for common type",
    "type": "object",
    "properties": {
         "eclass_template_id": {
            "type": "string",
            "title": "IFRIC Template ID",
            "description": "ID mapping for ECLASS",
            "default": "0173-1#01-ACL243#017",
            "readOnly": true,
            "segment": "identification",
            "model": true,
            "owner_ref": "application"
        },
        "asset_status": {
            "type": "string",
            "title": "Asset Status",
            "description": "State of the Asset in Scorpio",
            "readOnly": true,
            "segment": "parameter",
            "model": false,
            "owner_ref": "application"
        },
        "creation_date": {
            "type": "string",
            "title": "Creation Date",
            "description": "Date of the creation of asset",
            "segment": "parameter",
            "readOnly" : true,
            "model": false,
            "owner_ref": "application"
        },
        "asset_manufacturer_name": {
            "type": "string",
            "title": "Asset Manufacturer Name",
            "description": "The manufacturer of the asset",
            "segment": "identification",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "logo_manufacturer": {
            "type": "object",
            "title": "Logo Manufacturer",
            "contentEncoding": "base64",
            "contentMediaType": "image/png",
            "description": "Logo of the manufacturer",
            "segment": "identification",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "product_name": {
            "type": "string",
            "title": "Product Name",
            "description": "Model name/Name of the asset from the manufacturer",
            "segment": "identification",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "asset_serial_number": {
            "type": "string",
            "title": "Serial Number",
            "description": "Serial number of machine/product",
            "segment": "identification",
            "model": false,
            "owner_ref": "manufacturer"
        },
        "product_image": {
            "type": "object",
            "title": "Product Icon",
            "contentEncoding": "base64",
            "contentMediaType": "image/png",
            "description": "The production icon of the asset",
            "segment": "identification",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "manufacturing_year": {
            "type": "number",
            "title": "Year of manufacturing",
            "description": "The manufacturer year of the asset",
            "segment": "identification",
            "model": false,
            "owner_ref": "manufacturer"
        },
        "documentation": {
            "type": "object",
            "title": "Operating Manual",
            "contentEncoding": "base64",
            "contentMediaType": "application/pdf",
            "description": "The legally required documentation for the machine",
            "segment": "documentation",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "ce_marking": {
            "type": "object",
            "title": "CE-Marking",
            "description": "The ce-marking of the asset",
            "contentEncoding": "base64",
            "contentMediaType": "application/pdf",
            "segment": "documentation",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "weight": {
            "type": "number",
            "title": "Weight",
            "description": "Weight in kilograms",
            "unit": "kg",
            "segment": "parameter",
            "model": true,
            "owner_ref": "manufacturer"
        },
        "stock_keeping_unit": {
            "type": "number",
            "title": "SKU",
            "description": "SKU (Stock Keeping Unit)",
            "segment": "parameter",
            "model": true,
            "owner_ref": "manufacturer"
        }
    }
}
